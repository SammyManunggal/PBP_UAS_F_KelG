<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sammymanunggal.tugasBesarPBP.model.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/gradStart">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:cropToPadding="true"
            android:layout_marginLeft="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:id="@+id/imgProfile"/>

<!--        <Button-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:layout_gravity="left"-->
<!--            android:layout_marginLeft="60dp"-->
<!--            android:text="Take Photo"-->
<!--            android:textSize="10dp"-->
<!--            android:id="@+id/takePhoto"-->
<!--            android:backgroundTint="@color/grey"-->
<!--            android:textColor="@color/black"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"
            android:fontFamily="@font/hind_siliguri_bold"
            android:text="Username"
            android:textColor="@color/grey"
            android:textSize="35dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/hind_siliguri_semibold"
        android:text="Nama"
        android:textSize="18dp"
        android:textStyle="bold" />




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_nama_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_nama"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:autofillHints=""
            android:hint="Nama"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/hind_siliguri_semibold"
        android:text="Alamat"
        android:textSize="18dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:id="@+id/profile_alamat_layout"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="10dp"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:id="@+id/profile_alamat"
                android:inputType="text"
                android:autofillHints=""
                android:hint="Alamat"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginRight="4dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Back"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="1dp"
            android:textColor="#FFFFFF"
            android:text="Save"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:fontFamily="@font/hind_siliguri_semibold"
        android:text="No. Hp"
        android:textSize="18dp"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:id="@+id/profile_nohp_layout"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/profile_nohp"
                android:inputType="number"
                android:autofillHints=""
                android:hint="No Hp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_signout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-45dp"
        android:layout_gravity="end"
        android:layout_marginRight="32dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:fontFamily="@font/hind_siliguri_bold"
        android:text="Sign Out"
        android:backgroundTint="@color/grey"
        android:textColor="#0d7377"
        android:textSize="15dp" />

</LinearLayout>